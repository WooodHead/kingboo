{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@kb/model": [
        "libs/model/src"
      ],
      "@kb/model/*": [
        "libs/model/src/*"
      ],
      "@kb/config": [
        "libs/config/src"
      ],
      "@kb/config/*": [
        "libs/config/src/*"
      ],
      "@kb/fauna-client": [
        "libs/fauna-client/src"
      ],
      "@kb/fauna-client/*": [
        "libs/fauna-client/src/*"
      ],
      "@kb/rabbit": [
        "libs/rabbit/src"
      ],
      "@kb/rabbit/*": [
        "libs/rabbit/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}